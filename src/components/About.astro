---
interface Props {
  title: string;
}
import { Image } from "astro:assets";
import aboutImage from "../images/about-image.avif";
import {
  aboutTitle,
  aboutPara,
  aboutPara2,
  skill1,
  skill2,
  skill3,
  skill4,
} from "../content/aboutContent";
const { title } = Astro.props;
---

<section class="about pt-[20px] pb-[20px] sm:pt-[100px] sm:pb-[100px]" id="about">
  <div class="container">
    <h2 class="text-center text-[60px] text-white font-semibold mb-[30px]">
      {aboutTitle}
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2">
      <div class="">
        <p class="text-white text-[16px] font-medium mb-[30px] max-w-[620px] text-center sm:text-left">
          {aboutPara}
        </p>
      </div>
      <div>
        <p class="text-white text-[16px] font-medium mb-[30px] max-w-[620px] text-center sm:text-left">
          {aboutPara2}
        </p>
      </div>
      <div>
        <div>
          <h4 class="text-white text-[20px] uppercase font-medium mb-[10px]">
            {skill1}
          </h4>
          <div
            class="h-[6px] relative max-w-xl rounded-full overflow-hidden bg-[#ddd] mb-[10px] sm:mb-[20px]"
          >
            <div class="w-[95%] h-full bg-theme-gradiant absolute"></div>
          </div>
        </div>
        <div>
          <h4 class="text-white text-[20px] uppercase font-medium mb-[10px]">
            {skill2}
          </h4>
          <div
            class="h-[6px] relative max-w-xl rounded-full overflow-hidden bg-[#ddd] mb-[10px] sm:mb-[0]"
          >
            <div class="w-[95%] h-full bg-theme-gradiant absolute"></div>
          </div>
        </div>
        
      </div>
      <div>
        <div>
          <h4 class="text-white text-[20px] uppercase font-medium mb-[10px]">
            {skill3}
          </h4>
          <div
            class="h-[6px] relative max-w-xl rounded-full overflow-hidden bg-[#ddd] mb-[10px] sm:mb-[20px]"
          >
            <div class="w-[88%] h-full bg-theme-gradiant absolute"></div>
          </div>
        </div>
        <div>
          <h4 class="text-white text-[20px] uppercase font-medium mb-[10px]">
            {skill4}
          </h4>
          <div
            class="h-[6px] relative max-w-xl rounded-full overflow-hidden bg-[#ddd] "
          >
            <div class="w-[85%] h-full bg-theme-gradiant absolute"></div>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</section>
